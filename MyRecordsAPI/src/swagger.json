{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "My Records API",
    "description": "A simple API to manage your music collection",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1/",
      "description": "Local Server"
    }
  ],
  "consumes": "application/json",
  "produces": "application/json",
  "paths": {
    "/labels": {
      "get": {
        "tags": ["Labels"],
        "summary": "Get all labels",
        "responses": {
          "200": {
            "description": "A list of the labels",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/labels"
                }
              }
            }
          }
        }
      }
    },
    "/labels/{id}": {
      "get": {
        "tags": ["Label"],
        "summary": "Get label by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A label",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/label"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "label": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer",
            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "catno": {
            "type": "string"
          }
        }
      },
      "labels": {
        "type": "array",
        "$ref": "#/components/schemas/label"
      }
    }
  }
}
